{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/subscription-expiry-check",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/payment-reminders",
      "schedule": "0 10 * * 1"
    },
    {
      "path": "/api/cron/process-notifications",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/launch-campaigns",
      "schedule": "0 8 * * *"
    }
  ]
}