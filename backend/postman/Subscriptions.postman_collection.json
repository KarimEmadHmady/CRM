          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"customer\": \"{{customerId}}\",\n    \"packageType\": \"premium\",\n    \"startDate\": \"2024-01-01\",\n    \"endDate\": \"2024-12-31\",\n    \"price\": 999,\n    \"paymentMethod\": \"card\",\n    \"autoRenew\": true,\n    \"notes\": \"Annual premium membership\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/subscriptions",
          "host": ["{{baseUrl}}"],
          "path": ["api", "subscriptions"]
        }
      },
      "response": []
